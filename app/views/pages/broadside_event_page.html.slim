= area :main do

  .column-wrapper
    .column-wide

      ul.bs-subnav
        li.bs-subnav__item
          a href="/when" ← Festival schedule

      .heading-block
        .heading-block__info
          h1.heading-block__heading= page.event.title
        .heading-block__pattern

      ' Add event description here plus sharing/calendar buttons
      br
      br
      /= render_content_in_sections page.fields[:body]

      .event-meta
        .event-meta-info

          .event-meta__label When
          .event-meta-info__value
            - if page.start_time
              = page.start_time
            span.t-normal
              '  to
              br
            - if page.end_time
              = page.end_time

          .event-meta__label When
          .event-meta-info__value.t-upper
            - if page.event.fields[:ticket_prices].data_present?
              p = page.event.fields[:ticket_prices].value

          .event-meta__label Where
          .event-meta-info__value.t-upper
            - if page.event.venue
              p = page.event.venue.title

          .event-meta__label Type
          .event-meta-info__value.t-upper
            - if page.event.fields[:broadside_type].data_present?
              p = page.event.fields[:broadside_type].value

