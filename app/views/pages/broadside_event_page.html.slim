= area :main do
  .column-wrapper
    .column-wide

      ul.bs-subnav
        li.bs-subnav__item
          a href="/when" ← Festival schedule

      .heading-block
        .heading-block__info

          / Event status
          span.bs-event__ticketing-stage Selling fast
          / span.bs-event__booked-out-flag Booked out

          - heading_class = "t-wide"
          - if page.event.title.length > 20
            - heading_class = "t-narrow"
          h1.heading-block__heading class=heading_class = page.event.title
        .heading-block__pattern

      .bs-event
        .bs-event__share
          .bs-label Share
          ul
            li
              / twitter
              a.ss-icon target="_blank" href="https://twitter.com/home?status=#{request.original_url}" &#xF611;
            li
              / facebook
              a.ss-icon target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=#{request.original_url}" &#xF610;
            li
              / email
              a.ss-icon href="mailto:?subject=From the Wheeler Centre: #{u(page.title)} &body=#{u(request.original_url)}  " &#x2709;

        .bs-event__content.copy
          - if page.event.fields[:body].data_present?
            = render_content_in_sections page.event.fields[:body]

      .bs-event-meta
        .bs-event-meta-info

          .bs-label When
          .bs-event-meta-info__value
            - if page.start_time
              = page.start_time
            span.t-normal
              '  to
              br
            - if page.end_time
              = page.end_time

          .bs-label When
          .bs-event-meta-info__value.t-upper
            - if page.event.fields[:ticket_prices].data_present?
              p = page.event.fields[:ticket_prices].value

          .bs-label Where
          .bs-event-meta-info__value.t-upper
            - if page.event && page.event.venue
              p = page.event.venue.title

          .bs-label Type
          .bs-event-meta-info__value.t-upper
            - if page.event.fields[:broadside_type].data_present?
              p = page.event.fields[:broadside_type].value

        .bs-event-meta-speakers
          .bs-label Who

          - if page.broadside_speaker_pages
            - page.broadside_speaker_pages.each do |speaker_page|
              a href=speaker_page.absolute_url
                .bs-speaker

                  - if speaker_page.portrait_url
                    img.bs-speaker__image src=speaker_page.portrait_url

                  .bs-speaker__info
                    .bs-speaker__title = speaker_page.title
                    .bs-speaker__meta
                      - if speaker_page.twitter_name
                        span = "@" + speaker_page.twitter_name
                    .bs-speaker__intro.copy
                      = speaker_page.biography

      .heading-block.heading-block--reverse
        .heading-block__info
          h1.heading-block__heading.t-wide
            a href="/" Book now
        .heading-block__pattern
