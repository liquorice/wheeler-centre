- show_type = show_type || false
- hide_summary = hide_summary || false
- if event.fields[:thumbnail_image].data_present?
  - image = event.fields[:thumbnail_image].asset
- elsif event.promo_image
  - image = event.promo_image
- selected_primary_topics = select_primary_topics_for_page(event)

.snap-block
    a.event-snap.event-snap-block href=event.absolute_url
        - if event.fields[:start_date].data_present?
          time.event-snap__date datetime=l(event.fields[:start_date].value, format: :rfc_3339)
            = l event.fields[:start_date].value, format: :medium_date
        - if image
          .event-snap__hero
            .event-snap__hero-inner
              img src=image.content_thumbnail_url
            - if image.attribution.present?
              .event-snap__hero-caption.caption
                 p = image.attribution
        - if event.series
          p.event-snap__series
            = event.series.title
        h3.event-snap__title
          span.title-text == widont_format markdown_line event.title
          - if selected_primary_topics && selected_primary_topics.any?
            span.title-tags
              '  &nbsp;/&nbsp;
              = selected_primary_topics.first.title
