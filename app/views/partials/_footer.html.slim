footer.footer.clearfix role="contentinfo"
  - cache ["footer-nav-all-2", Time.current.beginning_of_day] do
    nav.footer-nav-main.clearfix
      .footer-nav-main__group
        - cache ["footer-events-header-2", events_page] do
          h3
            a href=url_with_domain(events_page.absolute_url, with_domain: with_domain)
              == markdown_line events_page.title
        - events_pages = events_page.children.in_order.visible.published.where(collection_id: nil)
        - cache ["footer-events-nav-2", events_pages] do
          ul
            - events_pages.each do |child|
              - cache ["footer-nav-item-2", child] do
                li
                  a href=url_with_domain(child.absolute_url, with_domain: with_domain)
                    == markdown_line child.title
      .footer-nav-main__group
        - cache ["footer-broadcasts-header-2", broadcasts_page] do
          h3
            a href=url_with_domain(broadcasts_page.absolute_url, with_domain: with_domain)
              = broadcasts_page.title
        - broadcasts_pages = broadcasts_page.children.in_order.visible.published.where(collection_id: nil)
        - cache ["footer-broadcasts-nav-2", broadcasts_pages] do
          ul
            - broadcasts_pages.each do |child|
                - cache ["footer-nav-item-2", child] do
                  li
                    a href=url_with_domain(child.absolute_url, with_domain: with_domain)
                      == markdown_line child.title
      .footer-nav-main__group
        - cache ["footer-blog-header-2", blog_page] do
          h3
            a href=url_with_domain(blog_page.absolute_url, with_domain: with_domain)
              == markdown_line blog_page.title
        - blog_pages = blog_page.children.in_order.visible.published.where(collection_id: nil)
        - cache ["footer-blog-nav-2", blog_pages] do
          ul
            - blog_pages.each do |child|
              - cache ["footer-nav-item-2", child] do
                li
                  a href=url_with_domain(child.absolute_url, with_domain: with_domain)
                    == markdown_line child.title
      .footer-nav-main__group
        - cache ["footer-people-header-2", people_page] do
          h3
            a href=url_with_domain(people_page.absolute_url, with_domain: with_domain)
              == markdown_line people_page.title
      .footer-nav-main__group.footer-nav-main__group--double.footer-nav-main__group--projects
        h3= projects_page.title
        - cache ["footer-projects-nav-2", projects_for_navigation] do
          - projects_for_navigation.in_groups(2, false).each do |group|
            - if group.present?
              ul
                - group.each do |child|
                  - cache ["footer-nav-item-2", child] do
                    li
                      a href=url_with_domain(child.absolute_url, with_domain: with_domain)
                        == markdown_line child.title
      .footer-nav-main__group.footer-nav-main__group--double
        h3 Topics
        - cache ["footer-projects-nav-2", primary_topics] do
          - primary_topics.in_groups(2, false).each do |group|
            - if group.present?
              ul
                - group.each do |child|
                  - cache ["footer-nav-item-2", child] do
                    li
                      a href=url_with_domain(child.absolute_url, with_domain: with_domain)
                        == markdown_line child.title
  - cache  ["footer-search-2", params[:q]] do
    nav.footer-nav-secondary.clearfix
      ul
        li.footer-nav-secondary__search
          span.screenreaders-only Search
          form.footer__search-form.clearfix action=main_app.search_path method="GET"
            input.footer__search-input placeholder="Search the Wheeler Centreâ€¦" name="q"
            button.footer__search-button
              i.fa.fa-search
        li
          a href=url_with_domain("/about-us", with_domain: with_domain) About Us
        li
          a href=url_with_domain("/support-us/donate", with_domain: with_domain) Donate
        li
        a href=url_with_domain("/subscribe", with_domain: with_domain) Subscribe

  .footer__logo
    a.footer__logo-anchor data-view-touch-preview={previewClassName: "footer__logo-anchor--hover"}.to_json href=url_with_domain("/", with_domain: with_domain)
      ' The Wheeler Centre
