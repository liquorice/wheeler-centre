    li.masthead-nav-secondary__item
      a.masthead-nav-secondary__anchor href="/about-us"
        ' About Us
    li.masthead-nav-secondary__item
      a.masthead-nav-secondary__anchor href="/about-us"
        ' Donate
    li.masthead-nav-secondary__item.masthead-nav-secondary__item--search
      a.masthead-nav-secondary__anchor href="#"
        i.fa.fa-search


