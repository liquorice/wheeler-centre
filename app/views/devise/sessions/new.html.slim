= area :main do
  .page__content
    .page__body.page__body--session.copy
      .page__title.page__title--session
        h1 Log in

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          .field-header
            = f.label :email, class: "field-label"
          = f.email_field :email, autofocus: true, class: "field-text-input"

        .field
          .field-header
            = f.label :password, class: "field-label"
          = f.password_field :password, autocomplete: "off", class: "field-text-input"

        - if devise_mapping.rememberable?
          .field-checkbox
            = f.check_box :remember_me, class: "field-checkbox-input"
            = f.label :remember_me, class: "field-checkbox-label"

        .actions
          = f.submit "Log in", class: "button button--highlight"
      .page__body--session-links
        = render "devise/shared/links"
