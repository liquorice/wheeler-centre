= area :main do
  .page__content
    .page__body.page__body--session.copy
      .page__title.page__title--session
        h1.title
          | Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-header
            = f.label :email, class: "field-label"
          = f.email_field :email, autofocus: true, class: "field-text-input"
        .field
          .field-header
            = f.label :password, class: "field-label"
            - if @validatable
              span.field-hint
                | (
                = @minimum_password_length
                |  characters minimum)
          = f.password_field :password, autocomplete: "off", class: "field-text-input"
        .field
          .field-header
            = f.label :password_confirmation, class: "field-label"
          = f.password_field :password_confirmation, autocomplete: "off", class: "field-text-input"
        .actions
          = f.submit "Sign up", class: "button button--highlight"
      .page__body--session-links
        = render "devise/shared/links"
