.page__content
  .page__body.page__body--session.copy
    .page__title.page__title--session
      h1 Change your password

    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token

      .field
        .field-header
          = f.label :password, "New password", class: "field-label"
        = f.password_field :password, autofocus: true, autocomplete: "off", class: "field-text-input"

      .field
        .field-header
          = f.label :password_confirmation, "Confirm new password", class: "field-label"
        = f.password_field :password_confirmation, autocomplete: "off", class: "field-text-input"

      .actions
        = f.submit "Change my password", class: "button button--highlight"

    .page__body--session-links
      = render "devise/shared/links"

